<!DOCTYPE HTML>
<%- include('../_includes/topo'); %>	

	<div class="container">	
	    <div class="row">
			<h2>Cadastro de clientes</h2>
		</div>

		<% if(validacao.length > 0){ %>
			<div class="row">
				<div class="col-md-12">
					<div class="alert alert-danger">
						<strong>Atenção!</strong>
						<ul>
							<% for(var i = 0; i < validacao.length; i++){ %>
							<li><%= validacao[i].msg %></li>
							<% }%>
						</ul>
					</div>
				</div>
			</div>
		<% }%>

		<div class="row">
			<div class="col col-md-8">
				<form action="/cliente/editarCliente" method="post">
					<div class="form-group">
						<label>Cliente</label>
						<input type="text" name="nome_cliente" class="form-control" value="<%= cliente[0].nome_cliente %>" required><br>

						<label>Numero</label>
						<input type="text" name="numero" class="form-control" value="<%= cliente[0].numero %>"><br>

						<label>Email</label>
						<input type="email" name="email" class="form-control" value="<%= cliente[0].email %>"><br>

						<label>Instagram</label>
						<input type="text" name="instagram" class="form-control" value="<%= cliente[0].instagram %>"><br>

						<label>Data da primeira compra</label>
						<input type="date" name="data_ingresso" id="data_ingresso" class="form-control" value="<%= cliente[0].data_ingresso %>" required><br>

						<label>Outras informações</label>
						<textarea name="outras_informacoes" class="form-control" rows="3"><%= cliente[0].outras_informacoes %></textarea>

						<input type="hidden" name="id_cliente" value="<%= cliente[0].id_cliente %>">

					</div>				
						<a href="/clientes" class="btn btn-danger">Voltar</a>
						<input type="submit" value="Salvar" class="btn btn-primary">
				</form>   
			</div>
		</div>   
	</div>
</div>   		
	
		<script type="text/javascript">
			$(document).ready(function(){
				var data = new Date(<%= cliente[0].data_ingresso.getFullYear() %>, <%= cliente[0].data_ingresso.getMonth() %>, <%= cliente[0].data_ingresso.getDate() %> );
				var dy = data.getDate().toString().padStart(2, '0');
				var mt = (data.getMonth()+1).toString().padStart(2, '0');
				var yr = data.getFullYear();
				
							
			 document.getElementById('data_ingresso').value = yr+"-"+mt+"-"+dy;
			});
		</script>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>