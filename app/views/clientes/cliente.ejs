<!DOCTYPE HTML>
<%- include('../_includes/topo'); %>	

	    <div class="container">
	    	<div class="row">
			<div class="col col-lg-9 tituloInfo">	
				<h3><%= cliente[0].nome_cliente %></h3>
			</div>
		</div>

		<div class="row">
			<div class="col col-lg-9">		
			<div class="panel panel-default">	
				<div class="panel-heading">	
					<h3>Informações</h3>	
				</div>
	
				<div class="panel-body">		
				<table class="table table-striped table-hover table-lg">
		           
		            <tbody>
		            	<tr>
		            		<th>Data da primeira compra</th>
		            		<th><%= cliente[0].data_ingresso %></th>
		            	</tr>
		                <tr>
		                    <th>Numero</th>
		                    <td><%= cliente[0].numero %></td>
		                </tr>
		                <tr>
		                    <th>Email</th>
		                    <td><%= cliente[0].email %></td>
		                </tr>
		                <tr>
		                    <th>Instagram</th>
		                    <td><a href="<%= cliente[0].instagram %>" target="_blank"><%= cliente[0].instagram %></a></td>
		                </tr>
		                <tr>
		                    <th>Quantidade de compras</th>
		                    <td><%= cliente[0].produtos_comprados %></td>
		                </tr>
		                <tr>
		                    <th>Outras informações</th>
		                    <td><%= cliente[0].outras_informacoes %></td>
		                </tr>
		            </tbody>
		        </table>
	        </div>
	        </div>
	        </div>
	    </div>	 
	    <div class="row">
	    	<div class="col col-lg-9">
	    		<button class="btn btn-link" id="historico_compras">Historico de compras</button>
	    	</div>
	    </div>   

	    <div class="row">
	    	<div class="col col-lg-9">
	    		<span id="vendas_result"></span>
	    	</div>
	    </div>

	    <br>

        <div class="row">
        	<div class="col col-lg-9">
        		<a class="btn btn-link" href="/clientes">Voltar</a>
        	</div>
        </div>
	</div>

	    <script>
			$(document).ready( function(){				

				var id_cliente = <%= cliente[0].id_cliente %>;

				$('#historico_compras').click(function(){
										
					$.ajax({
						url: '/historicoCompras',
						method: "post",
						data: {id_cliente: id_cliente},
						success: function(data){
							$('#vendas_result').html(data);
						}
					});
				});

			});
		</script>		
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>