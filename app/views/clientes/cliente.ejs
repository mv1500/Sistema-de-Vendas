<!DOCTYPE HTML>
<%- include('../_includes/topo'); %>	

	    <div class="container">
	    	<div class="row">
			<div class="col col-lg-9 tituloInfo">	
				<h3><%= cliente[0].nome_cliente %></h3>
			</div>
		</div>

		<div class="row">
			<div class="col col-lg-9">					
				<table class="table table-striped table-hover table-lg">
		            <thead>
		            	<th colspan="2">Informações</th>
		            </thead>
		            <tbody>
		            	<tr>
		            		<th>Data da primeira compra</th>
		            		<th><%= cliente[0].data_ingresso %></th>
		            	</tr>
		                <tr>
		                    <th>Numero</th>
		                    <td><%= cliente[0].numero %></td>
		                </tr>
		                <tr>
		                    <th>Email</th>
		                    <td><%= cliente[0].email %></td>
		                </tr>
		                <tr>
		                    <th>Instagram</th>
		                    <td><a href="<%= cliente[0].instagram %>" target="_blank"><%= cliente[0].instagram %></a></td>
		                </tr>
		                <tr>
		                    <th>Outras informações</th>
		                    <td><%= cliente[0].outras_informacoes %></td>
		                </tr>
		            </tbody>
		        </table>
	        </div>
	    </div>
        <div class="row">
        	<div class="col col-lg-9">
        		<a class="btn btn-link" href="/clientes">Voltar</a>
        	</div>
        </div>
	</div>

	    		
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
