<!DOCTYPE HTML>
<%- include('../_includes/topo'); %>	

	<div class="container">	
	    <div class="row">
			<h2>Editar produto</h2>
		</div>

		<br>

		<% if(validacao.length > 0){ %>
			<div class="row">
				<div class="col-md-12">
					<div class="alert alert-danger">
						<strong>Atenção!</strong>
						<ul>
							<% for(var i = 0; i < validacao.length; i++){ %>
							<li><%= validacao[i].msg %></li>
							<% }%>
						</ul>
					</div>
				</div>
			</div>
		<% }%>

		<div class="row">
			<div class="col col-md-8">
				<form action="/produto/editarProduto" method="post">
				<div class="form-group">
					<label>Produto</label>
					<input type="text" name="nome_produto" class="form-control" value="<%= produto[0].nome_produto %>" required><br>

					<label>Descricao</label>
					<textarea name="descricao" class="form-control" rows="2"><%= produto[0].descricao %></textarea><br>

					<label>Categoria</label>
					<select placeholder="Selecione a categoria..." name="categoria" class="form-control">
				      <option value="">---Selecione---</option>
				      <option value="Pack mensal" 
				      	<% if("Pack mensal" == produto[0].categoria){ %>
				      		<%= "selected"%>
				      	<% }%>
				        >Pack mensal</option>
				      <option value="Pack promocional"
					      <% if("Pack promocional" == produto[0].categoria){ %>
					      		<%= "selected"%>
					      	<% }%>
				        >Pack promocional</option>
				      <option value="Pack edição limitada"
					      <% if("Pack edição limitada" == produto[0].categoria){ %>
					      		<%= "selected"%>
					      	<% }%>
				      >Pack edição limitada</option>
	   			      <option value="Outros"
		   			      <% if("Outros" == produto[0].categoria){ %>
					      		<%= "selected"%>
					      	<% }%>
	   			      >Outros</option>
				    </select>	

					<br>

					<label>Valor</label>
					<input type="number" step="0.05" name="valor" value="<%= produto[0].valor %>" class="form-control"><br>

					<label>Inicio da venda</label>
					<input type="date" name="inicio_venda" id="inicio_venda" value="<%= produto[0].inicio_venda %>" class="form-control" required><br>

					<input type="hidden" name="id_produto" value="<%= produto[0].id_produto %>">

				</div>				
					<a href="/produtos" class="btn btn-danger">Voltar</a>
					<input type="submit" value="Salvar" class="btn btn-primary">
				</form>   
			</div>
		</div>   
	</div>
</div>   

		<script type="text/javascript">
			$(document).ready(function(){
		
				var data = new Date(<%= produto[0].inicio_venda.getFullYear() %>, <%= produto[0].inicio_venda.getMonth() %>, <%= produto[0].inicio_venda.getDate() %> );
				var dy = data.getDate().toString().padStart(2, '0');
				var mt = (data.getMonth()+1).toString().padStart(2, '0');
				var yr = data.getFullYear();
				
				//console.log(dy);
			    document.getElementById('inicio_venda').value = yr+"-"+mt+"-"+dy;
		    });
		</script>		
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>